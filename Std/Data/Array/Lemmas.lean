  · next hne =>
    simp only [getElem?, size_push]
    split <;> split <;> try simp only [*, get_push_lt]
    · next p q => exact Or.elim (Nat.eq_or_lt_of_le (Nat.le_of_lt_succ p)) hne q
    · next p q => exact p (Nat.lt.step q)

